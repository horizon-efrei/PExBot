{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "checkJs": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "lib": ["es2021"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "paths": {
      "@/app": ["./src"],
      "@/app/*": ["./src/*"],
      "@/config": ["./config"],
      "@/config/*": ["./config/*"],
      "@/lib": ["./src/lib"],
      "@/lib/*": ["./src/lib/*"],
      "@/root": ["."],
      "@/root/*": ["./*"],
    },
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es2021",
    "typeRoots": ["./typings", "./node_modules/@types"],
  },
  "include": ["./src/**/*.ts", "./config/**/*.ts"],
  "exclude": ["node_modules/", "typings/"]
}
